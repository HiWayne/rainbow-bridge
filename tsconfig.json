{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "~": ["./src"],
      "shared": ["./src/shared"],
      "public.key": ["./public.key"],
      "private.key": ["./private.key"],
      "components": ["./src/components"]
    }
  }
}
